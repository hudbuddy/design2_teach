    <section id="learning-pieces-section" class="home-section">
      <div class="learning-piece-wrapper">
        <h2>
          <%= link_to "Learning Pieces", learning_pieces_path, :class=> "lp-head bg-p t-p", :method => :get %>
        </h2>
        <%= render partial: "helpers/sidescrollable", locals: { coll: @learning_pieces, coll_type: 'learning_pieces', topic: '' }  %>
