            </div>



        </div>
      </div>
    </section>

    <section id="consultant-section" class="home-section">
      <div class="consultants-wrapper">
          <h2>
            <%= link_to "Consultants", consultants_path, :class=> "consultant-head bg-s t-p", :method => :get %>
          </h2>

          <%= render partial: "helpers/sidescrollable", locals: { coll: @consultants, coll_type: 'consultants', topic: '' }  %>
