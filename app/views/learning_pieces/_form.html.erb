<%= simple_form_for @learning_piece, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description_short %>
    <%= f.input :description_long %>
    <%= f.input :youtube_url %>
    <%= f.input :picture %>
    <%= f.file_field  :avatar, as: :file %>
    <%= f.association :user %>
    <%= f.association :topics, as: :check_boxes%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
